<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.bigosaver.neerajyadav.bigosaver.activity.MyInformationActivity">

    <android.support.v7.widget.Toolbar style="@style/toolbar"></android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout style="@style/style_edit_layout">

                <simplifii.framework.widgets.CustomFontTextView
                    style="@style/tv_my_info"
                    android:text="@string/first_name" />

                <ImageView
                    android:id="@+id/iv_fname"
                    style="@style/iv_lock_info"
                    android:visibility="gone" />

                <simplifii.framework.widgets.CustomFontEditText
                    android:id="@+id/et_fname"
                    style="@style/et_info" />
            </RelativeLayout>

            <!--<View style="@style/view_my_info" />-->

            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/margin_8dp">-->

            <!--<simplifii.framework.widgets.CustomTextInputLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_merchant"
        android:orientation="vertical"
        android:padding="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/iv_main_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/background1" />

            <FrameLayout
                android:id="@+id/frame_shadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_background_image_shadow"
                android:visibility="visible" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/bigologo"
                android:visibility="invisible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <ImageView
                    android:id="@+id/iv_view"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/view_icon" />

                <com.lb.auto_fit_textview.AutoResizeTextView
                    android:id="@+id/tv_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/iv_view"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:text="N/A"
                    android:textColor="@color/white" />

                <RelativeLayout
                    android:id="@+id/l_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/ll_bg_iv"
                    android:layout_toRightOf="@+id/tv_view"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_time"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:src="@mipmap/time_icon" />

                    <com.lb.auto_fit_textview.AutoResizeTextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_toRightOf="@+id/iv_time"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="N/A"
                        android:textColor="@color/white" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_bg_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_option1"
                        style="@style/offer_iv_style"
                        android:layout_toLeftOf="@+id/iv_option2"
                        android:src="@mipmap/icon_one" />

                    <ImageView
                        android:id="@+id/iv_option2"
                        style="@style/offer_iv_style"
                        android:layout_toLeftOf="@+id/iv_option3"
                        android:src="@mipmap/icon_two" />

                    <ImageView
                        android:id="@+id/iv_option3"
                        style="@style/offer_iv_style"
                        android:layout_toLeftOf="@+id/iv_option4"
                        android:src="@mipmap/icon_three" />

                    <ImageView
                        android:id="@+id/iv_option4"
                        style="@style/offer_iv_style"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/deal_icon" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_4dp"
                android:paddingRight="@dimen/padding_4dp"
                android:paddingTop="@dimen/padding_6dp"
                android:weightSum="100">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-4dp"
                    android:layout_weight="80">

                    <ImageView
                        android:id="@+id/iv_offer_logo"
                        android:layout_width="68dp"
                        android:layout_height="64dp"
                        android:layout_centerInParent="true"
                        android:padding="4dp"
                        android:scaleType="centerInside"
                        android:src="@color/icon_blue" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@drawable/shape_background_image_icon"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/iv_new_offer"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/bigonew"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/rl_icons"
                        android:layout_marginLeft="@dimen/margin_4dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_tv_row_all"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <simplifii.framework.widgets.CustomFontTextView
                                android:id="@+id/tv_top_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:hint="@string/tv_top_row_alloffer"
                                android:textSize="@dimen/text_14dp" />

                            <simplifii.framework.widgets.CustomFontTextView
                                android:id="@+id/tv_num_outlets"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_top_all"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/color_blue_bg"
                                android:textSize="@dimen/text_12dp" />

                            <ImageView
                                android:id="@+id/iv_location_icon"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_below="@+id/tv_num_outlets"
                                android:layout_marginLeft="-2dp"
                                android:layout_marginTop="6dp"
                                android:src="@mipmap/location_icon"
                                android:tint="@color/black" />

                            <simplifii.framework.widgets.CustomFontTextView
                                android:id="@+id/tv_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_num_outlets"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_4dp"
                                android:layout_marginTop="6dp"
                                android:layout_toRightOf="@+id/iv_location_icon"
                                android:textSize="@dimen/text_12dp"
                                android:visibility="visible" />

                        </RelativeLayout>

                        <!--<ImageView-->
                        <!--android:id="@+id/iv_next"-->
                        <!--android:layout_width="@dimen/width_24dp"-->
                        <!--android:layout_height="@dimen/height_24dp"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:padding="@dimen/padding_4dp"-->
                        <!--android:src="@drawable/next1" />-->

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_icons"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_28dp"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/margin_4dp"
                        android:gravity="end|center_vertical">

                        <ImageView
                            android:id="@+id/civ_category"
                            style="@style/civ_row_style"
                            android:src="@mipmap/new_icon" />

                        <ImageView
                            android:id="@+id/civ_drinks"
                            style="@style/civ_row_style"
                            android:layout_toRightOf="@id/civ_category"
                            android:src="@mipmap/dronk_icon" />

                        <ImageView
                            android:id="@+id/civ_monthly"
                            style="@style/civ_row_style"
                            android:layout_toRightOf="@id/civ_drinks"
                            android:src="@mipmap/live_icon" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

            <com.lb.auto_fit_textview.AutoResizeTextView
                android:id="@+id/tv_one_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

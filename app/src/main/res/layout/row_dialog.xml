<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_6dp">

    <simplifii.framework.widgets.CustomFontTextView
        android:id="@+id/lblDialogItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="8dp"
        android:textColor="@color/color_blue_bg"
        android:textSize="@dimen/text_16dp" />

    <ImageView
        android:id="@+id/iv_icon_dialog"
        android:layout_width="@dimen/width_24dp"
        android:layout_height="@dimen/width_24dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/next" />
</RelativeLayout>

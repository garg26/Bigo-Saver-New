<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/padding_4dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_ad_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/cross"/>
    <simplifii.framework.widgets.CustomFontTextView
        android:id="@+id/tv_ad_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_ad_filter"
        android:layout_centerVertical="true"
        android:text="@string/group"
        android:textSize="@dimen/text_18dp"
        android:layout_marginLeft="@dimen/margin_12dp"
        />
    <ImageView
        android:id="@+id/iv_ad_filter_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/checked"/>
    <ImageView
        android:id="@+id/iv_ad_filter_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_ad_filter_yes"
        android:src="@drawable/cross_circle"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/padding_6dp"
    android:paddingLeft="@dimen/padding_12dp"
    android:paddingTop="@dimen/padding_6dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_place"
        style="@style/iv_row"
        android:layout_width="@dimen/iv_24dp"
        android:layout_height="@dimen/iv_24dp" />

    <simplifii.framework.widgets.CustomFontTextView
        android:id="@+id/tv_place_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_toRightOf="@id/iv_place"
        android:text="@string/place"
        android:textColor="@color/dark_gray" />

    <ImageView
        android:id="@+id/iv_next_place"
        style="@style/iv_row"
        android:layout_height="@dimen/iv_20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/rightarrow" />

</RelativeLayout>
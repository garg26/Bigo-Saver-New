<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_enter_code"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <simplifii.framework.widgets.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_your_cash_card_code_below"
            android:textColor="@color/golden_yellow"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_gravity="center"/>

        <simplifii.framework.widgets.CustomFontEditText
            android:id="@+id/et_cash_card"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_20dp"
            android:cursorVisible="true"
            android:inputType="textCapCharacters"
            android:textCursorDrawable="@null"
            android:backgroundTint="@color/full_transparent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_apply"
            android:layout_width="180dp"
            android:layout_height="32dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:background="@drawable/button_enter_code"
            android:text="@string/apply"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>
